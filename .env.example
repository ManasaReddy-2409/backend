# Backend environment variables example
# Copy this to .env and fill in real values (do NOT commit .env)

NODE_ENV=development
PORT=6001
MONGO_URI=your_mongo_connection_string_here
JWT_SECRET=your_jwt_secret_here

# Twilio (optional) - required if you want to send via Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+91XXXXXXXXXX

# Fast2SMS (India) - alternative SMS provider
FAST2SMS_API_KEY=your_fast2sms_api_key

# Development/testing convenience
OTP_FAKE=true# Backend environment variables
# Copy this file to `backend/.env` and fill in real values (do NOT commit .env)
PORT=6000

# Local MongoDB (development)
MONGO_URI=mongodb://localhost:27017/helpmeout

# OR: MongoDB Atlas (cloud) - replace <username>, <password>, <cluster>
# Example (use either MONGO_URI or MONGODB_URI - both are supported):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/helpmeout?retryWrites=true&w=majority

# NOTE: If your password contains special characters, URL-encode it (e.g. @ -> %40)
MONGODB_URI=

JWT_SECRET=your_jwt_secret_here
ADMIN_EMAIL=admin@example.com
# Initial admin password for first-run (change immediately in production)
ADMIN_PASSWORD=change_this_admin_password
NODE_ENV=development
